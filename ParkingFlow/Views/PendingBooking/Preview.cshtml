@model ParkingFlow.Models.Bookings

@{
    ViewData["Title"] = "Confirm Pending Booking";
}

<h2>Confirm Your Pending Booking</h2>
<hr />

@if (Model != null)
{
    <div class="card p-4 bg-light shadow-sm rounded">
        <h4>Parking Slot: @Model.ParkingSlot?.SlotCode</h4>
        <p><strong>Date:</strong> @Model.BookingDate.ToShortDateString()</p>
        <p><strong>From:</strong> @Model.StartTime</p>
        <p><strong>To:</strong> @Model.EndTime</p>
        <p><strong>Estimated Price:</strong> $@ViewBag.Price</p>

        <form asp-action="ConfirmBooking" method="post">
            <input type="submit" value="Confirm Booking" class="btn btn-success" />
        </form>

        <form asp-action="CancelPending" method="post" class="mt-2">
            <input type="submit" value="Cancel" class="btn btn-danger" />
        </form>
    </div>
}
else
{
    <div class="alert alert-warning">No pending booking found.</div>
}
