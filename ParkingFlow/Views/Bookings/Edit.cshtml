@model ParkingFlow.Models.Bookings
@{
    ViewData["Title"] = "Edit Booking";
}

<div class="container mt-5">
    <div class="card shadow-sm border-primary">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Edit Booking Details</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" class="needs-validation" novalidate>
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3" hidden>
                    <label asp-for="UserId" class="form-label"></label>
                    <input asp-for="UserId" class="form-control" />
                    <span asp-validation-for="UserId" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ParkingSlotId" class="form-label"></label>
                    <select asp-for="ParkingSlotId" class="form-select" asp-items="ViewBag.ParkingSlotId"></select>
                    <span asp-validation-for="ParkingSlotId" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="BookingDate" class="form-label"></label>
                    <input asp-for="BookingDate" class="form-control" type="date" />
                    <span asp-validation-for="BookingDate" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="StartTime" class="form-label"></label>
                    <input asp-for="StartTime" class="form-control" type="time" />
                    <span asp-validation-for="StartTime" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EndTime" class="form-label"></label>
                    <input asp-for="EndTime" class="form-control" type="time" />
                    <span asp-validation-for="EndTime" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success">💾 Save Changes</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
