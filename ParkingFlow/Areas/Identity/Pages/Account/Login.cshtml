@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4 p-4 bg-opacity-50">
                <div class="card-body">
                    <h2 class="card-title text-center text-primary mb-3">
                        <i class="fa-solid fa-right-to-bracket me-2"></i>LOG IN
                    </h2>
                    <hr />
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-primary" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                            <label asp-for="Input.Email"><i class="fa-solid fa-envelope text-black me-1"></i> Email</label>
                            <span asp-validation-for="Input.Email" class="text-primary small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="password" />
                            <label asp-for="Input.Password"><i class="fa-solid fa-lock text-black me-1"></i> Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label class="form-check-label" asp-for="Input.RememberMe">
                                <i class="fa-solid fa-circle-check me-1 text-success"></i> Remember me
                            </label>
                        </div>

                        <div class="d-grid mb-3">
                            <button id="login-submit" type="submit" class="btn btn-lg btn-success">
                                <i class="fa-solid fa-arrow-right-to-bracket me-1"></i> Log in
                            </button>
                        </div>

                        <div class="text-center">
                            <p class="mb-1">
                                <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none">
                                    <i class="fa-solid fa-circle-question text-info me-1"></i> Forgot password?
                                </a>
                            </p>
                            <p class="mb-1">
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">
                                    <i class="fa-solid fa-user-plus text-warning me-1"></i> Register as new user
                                </a>
                            </p>
                            <p>
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-decoration-none">
                                    <i class="fa-solid fa-paper-plane text-primary me-1"></i> Resend confirmation email
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
