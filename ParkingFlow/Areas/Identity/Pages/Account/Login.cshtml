@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 85vh;">
    <div class="card shadow-lg p-4 border-0" style="width: 100%; max-width: 420px; background-color: #1f1f1f 0.3; color: #fff; border-radius: 16px;">
        <div class="text-center mb-4">
            <i class="fas fa-right-to-bracket fa-3x text-success mb-2"></i>
            <h3 class="fw-bold">Welcome Back</h3>
            <p class="text-secondary small">Login to continue managing your bookings</p>
        </div>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control bg-dark border-secondary text-white" autocomplete="username" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="text-white-50"><i class="fa-solid fa-envelope me-2"></i>Email</label>
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control bg-dark border-secondary text-white" autocomplete="current-password" placeholder="password" />
                <label asp-for="Input.Password" class="text-white-50"><i class="fa-solid fa-lock me-2"></i>Password</label>
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                <label class="form-check-label text-white-50" asp-for="Input.RememberMe">
                    <i class="fa-solid fa-circle-check me-1 text-success"></i> Remember me
                </label>
            </div>

            <button id="login-submit" type="submit" class="btn btn-success w-100 rounded-pill fw-semibold mb-3">
                <i class="fa-solid fa-arrow-right-to-bracket me-2"></i> Log in
            </button>

            <div class="text-center small">
                <p>
                    <a asp-page="./ForgotPassword" class="text-info text-decoration-none">
                        <i class="fa-solid fa-circle-question me-1"></i> Forgot password?
                    </a>
                </p>
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-warning text-decoration-none">
                        <i class="fa-solid fa-user-plus me-1"></i> Register as new user
                    </a>
                </p>
                <p>
                    <a asp-page="./ResendEmailConfirmation" class="text-primary text-decoration-none">
                        <i class="fa-solid fa-paper-plane me-1"></i> Resend confirmation email
                    </a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
